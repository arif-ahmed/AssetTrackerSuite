@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Asset";
}

<h2>Delete Asset</h2>
<h4>Are you sure you want to delete this asset?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Asset Name</dt>
        <dd class="col-sm-10">@Model.Asset.AssetName</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Asset.Category</dd>

        <dt class="col-sm-2">Purchase Date</dt>
        <dd class="col-sm-10">@Model.Asset.PurchaseDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Purchase Value</dt>
        <dd class="col-sm-10">@Model.Asset.PurchaseValue</dd>

        <dt class="col-sm-2">Useful Life (Years)</dt>
        <dd class="col-sm-10">@Model.Asset.UsefulLifeYears</dd>
    </dl>
</div>
<form method="post">
    <input type="hidden" asp-for="Asset.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
